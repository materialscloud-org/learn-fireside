&control
    calculation = 'scf'
    restart_mode = 'from_scratch'
    prefix = 'NaCl'
    tstress = .true.
    tprnfor = .true.
    pseudo_dir = './pseudo/'
    outdir = './tmp/'
/
&system
    ibrav = 2
    celldm(1) = 10.5
    nat = 2
    ntyp = 2
    ecutwfc = 20.0
    ecutrho = 160.0
/
&electrons
    diagonalization = 'david'
    mixing_mode = 'plain'
    mixing_beta = 0.7
    conv_thr = 1.0d-8
/
ATOMIC_SPECIES
    Na  22.990    na_pbesol_v1.5.uspp.F.UPF
    Cl  35.446    cl_pbesol_v1.4.uspp.F.UPF
ATOMIC_POSITIONS {alat} 
    Na 0.00 0.00 0.00
    Cl 0.50 0.00 0.00
K_POINTS {automatic}
    2 2 2 0 0 0
