&control
   calculation = 'relax'
   restart_mode = 'from_scratch'
   prefix = 'NaCl'
   tstress = .true.
   tprnfor = .true.
   pseudo_dir = './pseudo/'
   outdir='./tmp'
/
&system
   ibrav = 0
   celldm(1) = 10.5
   nat = 8
   ntyp = 2
   ecutwfc = 50
   ecutrho = 400
/
&electrons
   diagonalization = 'david'
   mixing_mode = 'plain'
   mixing_beta = 0.7
   conv_thr = 1.0d-8
/
&ions
/
